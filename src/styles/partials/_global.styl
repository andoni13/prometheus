@font-face
  font-family 'AvenirNext';
  font-weight 400;
  src url('../../assets/fonts/AvenirNextLTPro-Regular.woff');

@font-face
  font-family 'AvenirNext';
  font-weight 300;
  src url('../../assets/fonts/AvenirNextLTPro-Demi.woff');

@font-face
  font-family 'AvenirNext';
  font-weight 700;
  src url('../../assets/fonts/AvenirNextLTPro-Bold.woff');

*
  box-sizing border-box
  margin 0
  padding 0

html
  font-size fontSize // 1rem = 10px for easy calc!

body
  background: offwhite
  color: fontColor
  counter-reset: bullet-list
  font-family: fontFamily
  line-height: fontLineHeight

h1
  font-size 2.5rem
  font-weight 700
  margin-bottom 0.2em

button:focus,
input:focus,
select:focus,
textarea:focus
  outline none

li
  list-style none

ul
  margin 0
  padding 0
