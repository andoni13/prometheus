@import '../../../../styles/partials/_variables.styl'

.overlay
  height 100%
  position relative

.wrapper
  align-items center
  background rgba(255, 255, 255, 0.65)
  display flex
  height 100%
  position absolute
  top 0
  width 100%

.loader
  display flex
  height 36px
  margin 0 auto
  position relative
  width 36px
  div
    box-sizing border-box
    display block
    position absolute
    width 28px
    height 28px
    margin 4px
    border 4px solid alpha(green, 0.8)
    border-radius 50%
    animation loader 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite
    border-color alpha(green, 0.8) transparent transparent transparent
  div:nth-child(1)
    animation-delay -0.45s
  div:nth-child(2)
    animation-delay -0.3s
  div:nth-child(3)
    animation-delay: -0.15s

@keyframes loader {
  0% {
    transform rotate(0deg)
  }

  100% {
    transform rotate(360deg)
  }
}

