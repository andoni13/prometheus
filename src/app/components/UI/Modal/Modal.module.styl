@import '../../../../styles/partials/_variables.styl'

.modal
  &__overlay
    align-items center
    background rgba(0,0,0,0.1)
    display flex
    height 100vh
    justify-content center
    position fixed
    top 0
    width 100%
  &__container
    background white
    box-shadow 0 0 12px rgba(0,0,0,0.2)
    border-radius 2px
    height 100vh
    padding 2rem
    overflow scroll
    width 100%
    @media screen and (min-width phone)
      height auto
      max-height 52rem
      max-width 60rem
      min-width 32rem
      width 50%
  &__header
    align-items center
    border-bottom 1px solid darkGrey
    display flex
    font-size 2rem
    font-weight 700
    justify-content space-between
    margin-bottom 1.5rem
    padding-bottom 0.25rem
  &__headerClose
    cursor pointer
