@import '../../../../styles/partials/_variables.styl'

.list
  width 100%
  &__header
    align-items center
    border-bottom 1px solid darkGrey
    display grid
    grid-template-columns 3fr 12rem
    margin-bottom 2rem
  &__cell, &__cellHeader
    display block
    font-size 1.5rem
    padding 1rem
    text-align left
  &__cellHeader
    cursor pointer
    font-weight 700
  &__cell:nth-child(1)
    width: 100%
  &__row
    align-items center
    border-bottom 1px solid lightGrey
    cursor pointer
    display grid
    grid-template-columns 3fr 12rem
  &__row:hover
    background lightGrey
