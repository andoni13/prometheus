@import '../../../../styles/partials/_variables.styl'

.nav
  background white
  box-shadow 0 1px 2px rgba(0,0,0,0.15)
  display flex
  font-size 1.8rem
  font-weight 700
  justify-content space-between
  padding 1rem 5rem
  width 100%
  &__backButton
    align-items center
    border-radius 100%
    cursor pointer
    display flex
    height 2.5rem
    justify-content center
    width 2.5rem
    &:hover
      background rgba(0,0,0,0.05)
  &__title
    align-items center
    display flex
    justify-content center
    text-transform capitalize
    width 100%
