@import '../../../../styles/partials/_variables.styl'

.btn
  background magenta
  border none
  border-bottom 2px solid darken(magenta, 9)
  border-radius 2px
  display block
  color white
  cursor pointer
  font-size 1.5rem
  padding 1rem
  text-transform capitalize
  width 100%
  &:active
    background darken(magenta, 4)
  &:disabled
    background lightGreen
    cursor not-allowed
