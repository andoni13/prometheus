{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "*": ["src/*", "src/shared/*", "test/*"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "plugins": [{ "name": "typescript-plugin-css-modules", "options": {"customMatcher": "\\.m\\.styl"} }]
  },
  "include": ["src", "test/*"]
}
